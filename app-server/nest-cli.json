{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.proto",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.lua",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.docx",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.css",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
